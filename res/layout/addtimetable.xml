<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Time Table"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00 - 10:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/to910"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00 - 11:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/to1011"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:00 - 12:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/to1112"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 - 1:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/to121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:00 - 2:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/to12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:00 - 3:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/to23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:00 - 4:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/to34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<Button
    android:id="@+id/post_timetable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Post" />
    
</LinearLayout>

</ScrollView>